{
  "name": "sword1",
  "displayName": "sword1",
  "publisher": "mushaoyu",
  "description": "A generator for generate project common source template",
  "repository": {
    "type": "git",
    "url": "https://github.com/haimalairen/sword_1/issues"
  },
  "version": "1.1.1",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "host",
        "extensions": [
          ".host"
        ],
        "aliases": [
          "host"
        ]
      }
    ],
    "grammars": [
      {
        "language": "host",
        "scopeName": "source.host",
        "path": "./syntaxes/host.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sword1",
          "title": "sword1",
          "icon": "resources/host.png"
        }
      ]
    },
    "views": {
      "sword1": [
        {
          "id": "sword1",
          "name": "templates"
        }
      ]
    },
    "commands": [
      {
        "command": "sword1.start",
        "title": "sword1.start"
      },
      {
        "command": "sword1.choose",
        "title": "Choose"
      },
      {
        "command": "sword1.unchoose",
        "title": "UnChoose"
      },
      {
        "command": "sword1.rename",
        "title": "Rename"
      },
      {
        "command": "sword1.delete",
        "title": "Delete"
      },
      {
        "command": "sword1.add",
        "title": "Add",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sword1.add",
          "when": "view == sword1",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "sword1.unchoose",
          "when": "view == sword1 && viewItem == hostItem1",
          "group": "host@1"
        },
        {
          "command": "sword1.choose",
          "when": "view == sword1 && viewItem == hostItem0",
          "group": "host@1"
        },
        {
          "command": "sword1.rename",
          "when": "view == sword1 && viewItem =~ /hostItem/i",
          "group": "host@1"
        },
        {
          "command": "sword1.delete",
          "when": "view == sword1 && viewItem =~ /hostItem/i",
          "group": "host@1"
        },
        {
          "command": "sword1.add",
          "when": "view == sword1 && viewItem =~ /hostItem/i",
          "group": "host@1"
        }
      ]
    },
    "configuration": {
      "properties": {
        "host-auto.fundGroups": {
          "type": "string",
          "default": [
            "我的基金"
          ],
          "description": "配置基金分组名称（建议通过界面新增）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {},
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.10",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  }
}
